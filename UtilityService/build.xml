<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE xml>

<project name="UtilityService" default="warfile">
    
	<path id="compile.classpath">
		<fileset dir="WebContent/WEB-INF/lib">
			<include name="*.jar" />
		</fileset>
	</path>
<target name="clean">
		<delete dir="warfile" />
		
	</target>
	<target name="compile">
		<javac   includeantruntime="false" destdir="build/classes" debug="true" srcdir="src">
			<classpath refid="compile.classpath" />
		</javac>
	</target>
	
	<target name="warfile" depends="clean, compile">
		<mkdir dir="warfile" />
		<war destfile="warfile/${ant.project.name}.war" basedir="WebContent" >
			<classes dir="build/classes" />
		</war>

	</target>
</project>